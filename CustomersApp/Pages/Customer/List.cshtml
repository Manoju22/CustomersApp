@page
@model ListUsersModel
@{
    ViewData["Title"] = "List Customers";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div>
        <table class="table">
            <tr>
                <th>
                    CustomerId
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Country Code
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Balance
                </th>
                <th>
                    Action
                </th>
            </tr>

            @foreach (var item in Model.CustomersData)
            {
                <tr>
                    <td>
                        @item!.Id
                    </td>
                    <td>
                        @item.Firstname
                    </td>
                    <td>
                        @item.Lastname
                    </td>
                    <td>
                        <a href="mailto:@item.Email">@item.Email</a>
                    </td>
                    <td>
                        @item.Phone_Number
                    </td>
                    <td>
                        @item.Country_code
                    </td>
                    <td>
                        @item.Gender
                    </td>
                    <td>
                        @string.Format("{0:C}", item.Balance)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </table>
        <a class="btn btn-primary" asp-page="./Add">Create a new Customer</a>
    </div>
</body>
</html>