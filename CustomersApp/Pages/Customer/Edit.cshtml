@page "{id}"
@* Using above id is pass as route paramerter  *@
@model EditCustomerModel
@{
    ViewData["Title"] = "Edit Customer";
}
<h2>Edit Customer</h2>
<form method="post">
    <div><h3 align="center" style="color:orangered">@Html.ValidationMessage("NoChange")</h3></div>
    <input hidden asp-for="Customer!.Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Customer!.Id" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer!.Id" class="form-control" />
            <span asp-validation-for="Customer!.Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customer!.Firstname" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer!.Firstname" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customer!.Lastname" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer!.Lastname" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customer!.Email" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer!.Email" class="form-control" type="email" required email />
            <span asp-validation-for="Customer!.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customer!.Phone_Number" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer!.Phone_Number" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customer!.Country_code" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer!.Country_code" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customer!.Gender" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer!.Gender" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Customer!.Balance" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer!.Balance" class="form-control" />
            <span asp-validation-for="Customer!.Balance" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
<div>
    <a asp-page="./List">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}  